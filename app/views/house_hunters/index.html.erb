<p id="notice"><%= notice %></p>

<h1>House Hunters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Preferred Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @house_hunters.each do |house_hunter| %>
      <tr>
        <td><%= house_hunter.user.name %></td>
        <td><%= house_hunter.user.email %></td>
        <td><%= house_hunter.user.phone %></td>
        <td><%= house_hunter.preferred_contact %></td>
        <td><%= link_to 'Show', house_hunter %></td>
        <td><%= link_to 'Edit', edit_house_hunter_path(house_hunter) %></td>
        <td><%= link_to 'Destroy', house_hunter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

